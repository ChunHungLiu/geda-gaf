#!/bin/sh

# This script is based on gtk-config from gtk+ 1.2.x
# Adapted for use in gEDA by Ales V. Hvezda

#libgeda_libs="@libgeda_libs@"
#libgeda_cflags="@libgeda_cflags@"

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

PACKAGE=gEDA

usage()
{
	cat <<EOF
Usage: gesym-config [OPTIONS] 
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--sympath]
	[--toplevel]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @VERSION@
      ;;
    --sympath)
      echo_sympath=yes
      ;;
    --toplevel)
      echo_toplevel=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi

if test "$echo_sympath" = "yes"; then
	sympath=${prefix}/share/${PACKAGE}/sym
	echo ${sympath} 
fi      

if test "$echo_toplevel" = "yes"; then
	toplevel=${prefix}/share/${PACKAGE}
	echo ${toplevel} 
fi      

